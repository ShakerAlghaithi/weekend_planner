<div class="page-header">
  <% if @plan.user_id == current_user.id %>
    <%= link_to plans_path, :class => 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
    <% end %>
    <%= link_to edit_plan_path(@plan), :class => 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Edit
    <% end %>
  <% else %>
    <%= link_to plans_path, :class => 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
    <% end %>
  <% end %>
  <h3>Show plan</h3>
</div>
<dl class="dl-horizontal">
  <dt>Contant:</dt>
  <dd><%= @plan.contant %></dd>
</dl>
