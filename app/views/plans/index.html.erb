<div id ="planList" class="row">
<div class="page-header">
  <%= link_to new_plan_path, :class => 'btn btn-default btn-md' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Plan
  <% end %>
  <h1>Listing plans</h1>
</div>

<div id="plansTable" class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Contant</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @plans) do |plan| %>
            <td><%= plan.contant %></td>
            <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<hr size="10" noshade>
<div id="event" class="row">
<h4> Search for the events </h4>
<form id="eventSearch" action="plans/search" class="search-wrapper cf">
    <input id="location" name="location" type="text" placeholder="Enter the location here .." required="">
    <input id="keyword" name="keyword" type="text" placeholder="something you search for..." required="">
    <button  id="search" type="submit">Search</button>
</form>
  <table class="search_results" ></table>
  <div class="span10">
      <h2>Show</h2>
      <ul id="localshows"></ul>
      <%= @results.inspect %>
  </div>
</div>


