<%= form_tag plans_path, :method => 'get' do %>
  <%= text_field_tag :location, params[:location], placeholder: "Enter the location here .." %>
  <%= text_field_tag :keyword, params[:keyword], placeholder: "Enter the something here .." %>
  <%= submit_tag "Search", class: "btn btn-defualt btn-md" %>
<% end %>
  <table class="search_results" ></table>
  <div class="span10">
      <h2>Show</h2>
      <ul id="localshows">
        <% if @results != nil %>

          <% @results['events']['event'].each do |item| %>

            <%= item['city_name'] %> -- <%= item["venue_name"]%> -- <%= item["title"] %></br>

          <% end %>
        <% end %>

      </ul>

  </div>
</div>


