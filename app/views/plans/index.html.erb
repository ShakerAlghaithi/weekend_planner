
<div id ="planList" class="row">
<div class="page-header">
  <%= link_to new_plan_path, :class => 'btn btn-default btn-md' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Plan
  <% end %>
  <h4>Listing plans</h4>
</div>

<div id="plansTable" class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <tbody>
      <%= content_tag_for(:tr, @plans) do |plan| %>
            <td><%= plan.contant %></td>
            <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<hr size="10" noshade>
<div id="event" class="row">
<h4> Search for the events </h4>
